<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VideoToPhoto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NavigationView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ItemNavigationView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolBarTitle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/joti_one</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="AboutDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_about_in</item>
        <item name="android:windowExitAnimation">@anim/anim_about_out</item>
    </style>

    <style name="InfoImageDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_info_image_in</item>
        <item name="android:windowExitAnimation">@anim/anim_about_out</item>
    </style>

    <style name="ExitDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
    </style>
</resources>