<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.DetailImageActivity">

    <View
        android:id="@+id/v_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-1dp"
        android:background="@drawable/toolbar_cloud_bg" />

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:src="@drawable/ic_back_arrow" />

    <TextView
        android:id="@+id/txt_image_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/img_edit"
        android:layout_toEndOf="@id/img_back"
        android:ellipsize="end"
        android:fontFamily="@font/joti_one"
        android:maxLines="1"
        android:text="ddddddddddddkkkkkkkkkkkkkkkkkk"
        android:textColor="@color/blue"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/img_detail_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/v_bg_bottom"
        android:layout_below="@+id/v_bg"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/meme13" />

    <View
        android:id="@+id/v_bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/toolbar_cloud_bg_bottom" />

    <ImageView
        android:id="@+id/img_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/ic_share" />

    <ImageView
        android:id="@+id/img_info"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:src="@drawable/ic_about" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_delete" />

</RelativeLayout>