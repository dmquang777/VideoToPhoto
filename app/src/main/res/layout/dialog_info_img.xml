<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_activity_bg">

    <ImageView
        android:id="@+id/cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:src="@drawable/ic_calendar" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@id/cal"
        android:textColor="@color/blue"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_date"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/img"
        android:textColor="@color/blue"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_time"
        android:layout_margin="15dp"
        android:src="@drawable/ic_image" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_time"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@id/img"
        android:text="@string/author_name"
        android:textColor="@color/blue"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txt_size_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/img"
        android:text="@string/Term"
        android:textColor="@color/blue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_w_n_h_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/txt_size_image"
        android:text="@string/Term"
        android:textColor="@color/blue"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/txt_size_image" />

</RelativeLayout>